FROM node

ARG VITE_BASE_URL
ARG VITE_TRANSLATIONS_URL
ARG VITE_GOOGLE_CLIENT_ID

ENV VITE_BASE_URL=${VITE_BASE_URL}
ENV VITE_TRANSLATIONS_URL=${VITE_TRANSLATIONS_URL}
ENV VITE_GOOGLE_CLIENT_ID=${VITE_GOOGLE_CLIENT_ID}

WORKDIR /client

COPY package*.json ./

RUN npm ci

COPY . .

EXPOSE 3000

CMD ["npm", "run", "start"]