{
  "compilerOptions": {
    "target": "ESNext",
    "pretty": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "strictNullChecks": true,
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["@types/node"],
    "noEmitOnError": true,
    "paths": {
      "@back/*": ["./src/*"],
      "@tree/*": ["./src/tree/*"],
      "@handbook/*": ["./src/handbook/*"],
      "@world/*": ["./src/world/*"],
      "@user/*": ["./src/users/*"],
      "@backend-shared/*": ["../../backend-shared/*"]
    }
  }
}
